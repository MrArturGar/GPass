<UserControl x:Class="GPass.LineElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPass"
             mc:Ignorable="d"   >
    <Grid Background="#FFB2AFAF">
        <WrapPanel Width="440">
            <Button Name="ButtonDelete" Content="X" Width="20" Height="20" Margin="5,0,0,0" FontWeight="Bold" Click="ButtonDelete_Click" />
            <Button Name="ButtonEdit" Content="✎" Width="20" Height="20" Margin="5,0,0,0" Click="ButtonEdit_Click" />
            <TextBox Name="textBoxName" Margin="5,5,5,5" TextWrapping="Wrap" Text="Name" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="Bold" Width="180" IsReadOnly="True" Height="20" MouseLeftButtonUp="textBox_CopyName"/>
            <TextBox x:Name="textBoxData" Margin="5,5,5,5" TextWrapping="Wrap" Text="Data" Background="{x:Null}" BorderBrush="Black" HorizontalAlignment="Left" RenderTransformOrigin="-0.031,0.556" MinHeight="20" MinWidth="190" IsReadOnly="True" Height="20" Width="173" MouseLeftButtonUp="textBox_CopyData"/>
        </WrapPanel>
    </Grid>
</UserControl>
