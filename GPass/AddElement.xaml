<Window x:Class="GPass.AddElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPass"
        mc:Ignorable="d"
        Title="AddElement" Height="146" Width="333" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Добавить данные" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Label Content="Заголовок:" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top"/>
        <TextBox Name="textBoxTitle" HorizontalAlignment="Left" Height="23" Margin="85,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" TextChanged="textBoxTitle_TextChanged"/>
        <Button Name="buttonCancel" Content="Отменить" HorizontalAlignment="Left" Margin="10,85,0,0" Width="75" Height="20" VerticalAlignment="Top" Click="buttonCancel_Click"/>
        <Button Name="buttonAdd" Content="Добавить" HorizontalAlignment="Left" Margin="245,85,0,0" Width="75" Height="20" VerticalAlignment="Top" IsEnabled="False" Click="buttonAdd_Click"/>

    </Grid>
</Window>
